<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo personalizado -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cambia el color a tu preferencia -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados del fondo -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Borde alrededor del fondo -->
        </shape>
    </item>

    <!-- Capa adicional para aplicar los bordes -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0E9284" /> <!-- Cambia el color a tu preferencia -->
            <corners android:radius="7dp" /> <!-- Bordes redondeados del fondo -->
        </shape>
    </item>

    <!-- Flecha -->
    <item
        android:drawable="@drawable/flecha"
        android:width="50dp"
        android:height="50dp"
        android:gravity="end|center_vertical" /> <!-- Ajusta la posiciÃ³n de la flecha (end o right) -->
</layer-list>
